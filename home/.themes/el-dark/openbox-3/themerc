# Window geometry
padding.width: 3
padding.height: 1
border.width: 1
window.client.padding.width: 0
window.client.padding.height: 0
window.handle.width: 0

#Menu geometry
menu.border.width: 1
menu.overlap.x: -4
menu.overlap.y: 0

# Border colors
