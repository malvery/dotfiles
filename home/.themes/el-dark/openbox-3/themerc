window.active.grip.bg.colorTo: #303030

window.*.button.*.bg: Parentrelative
window.*.button.unpressed.image.color: #aaaaaa

window.*.button.pressed.image.color: #101010

window.*.button.disabled.image.color: #BBBBBB

