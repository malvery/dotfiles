window.inactive.client.color: #3f3f3f

window.active.title.separator.color:  #5f5f5f
window.inactive.title.separator.color: #5f5f5f

# Text shadows
menu.items.font:shadow=n
window.active.label.text.font:shadow=n:shadowtint=-50:shadowoffset=1
window.inactive.label.text.font:shadow=n:shadowtint=-30:shadowoffset=1
menu.title.text.font: shadow=y:shadowtint=-10:shadowoffset=1
osd.label.text.font:shadow=y:shadowtint=-10:shadowoffset=1

# Window title justification
window.label.text.justify: center

