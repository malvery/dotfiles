// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+left",
        "command": "vim.remap",
        "args": {"after": ["B"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+right",
        "command": "vim.remap",
        "args": {"after": ["W"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "shift+left",
        "command": "vim.remap",
        "args": {"after": ["b"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "shift+right",
        "command": "vim.remap",
        "args": {"after": ["w"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "shift+up",
        "command": "vim.remap",
        "args": {"after": ["<Ctrl+b>"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "shift+down",
        "command": "vim.remap",
        "args": {"after": ["<Ctrl+f>"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "shift+pagedown",
        "command": "vim.remap",
        "args": {"after": ["<Ctrl+f>"]},
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },
    {
        "key": "shift+pageup",
        "command": "vim.remap",
        "args": {"after": ["<Ctrl+b>"]},
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },
    {
        "key": "pageup",
        "command": "vim.remap",
        "args": {"after": ["<Ctrl+u>"]},
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },
    {
        "key": "pagedown",
        "command": "vim.remap",
        "args": {"after": ["<Ctrl+d>"]},
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },
    {
        "key": "shift+home",
        "command": "vim.remap",
        "args": {"after": ["^"]},
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },
    {
        "key": "shift+end",
        "command": "vim.remap",
        "args": {"after": ["$","h"]
        },
        "when": "editorTextFocus && vim.mode == 'Visual'"
    },
    {
        "key": "home",
        "command": "vim.remap",
        "args": {"after": ["^"]},
        "when": "editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "alt+left",
        "command": "vim.remap",
        "args": {"after": ["gt"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "alt+right",
        "command": "vim.remap",
        "args": {"after": ["gT"]},
        "when": "editorTextFocus && vim.mode == 'Visual' || vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+w",
        "command": "-workbench.action.closeWindow",
        "when": ""
    },
    {
        "key": "ctrl+w",
        "command": "-workbench.action.closeActiveEditor"
    },
    {
        "key": "ctrl+w",
        "command": "-workbench.action.closeGroup",
        "when": "activeEditorGroupEmpty && multipleEditorGroups"
    },
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quit"
    },
    {
        "key": "ctrl+/",
        "command": "macros.commentDown",
        "when": "editorTextFocus && !editorReadonly"
    }

]