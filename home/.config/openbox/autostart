if [ "$HOSTNAME" = nbubnt185 ]; then
  libinput-gestures &

  flatpak run org.gnome.Evolution &
  flatpak run com.slack.Slack &
  flatpak run us.zoom.Zoom &

else
  libinput-gestures-setup restart &

  telegram-desktop &
  thunderbird &
fi

