#!/bin/bash

BR_STEP=1
SLEEP=0.03
if [[ "${BLOCK_BUTTON}" -eq 4 ]]; then
	light -A ${BR_STEP}
	sleep ${SLEEP}

elif [[ "${BLOCK_BUTTON}" -eq 5 ]]; then
	light -U ${BR_STEP}
	sleep ${SLEEP}
fi

VALUE=$(light)
VALUE=${VALUE%.*}

echo "${VALUE}%"
echo "${VALUE}%"


if [[ ${VALUE} -lt 2 ]]; then
	exit 33

elif [[ ${VALUE} -gt 75 ]]; then
	echo ${COLOR_H}

elif [[ ${VALUE} -gt 40 ]]; then
	echo ${COLOR_M}

fi
