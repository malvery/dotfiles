#!/bin/bash
VALUE=$(cat /proc/net/wireless | tail -n 1 | awk '{print int($3 * 100 / 70)}')

VPN_STATUS=''
if [[ $(ip tuntap show | wc -l) -gt 0 ]]; then
	VPN_STATUS='^VPN '
fi

if [[ ${VALUE} -eq 0 ]]; then
	echo "down"
	echo "down"
	echo ${COLOR_H}

else
	SSID=$(iwgetid -r)
	echo "${VALUE}% ${VPN_STATUS}${SSID}"
	#echo ${VALUE}%
	echo ${VALUE}%

	if [[ ${VALUE} -lt 30 ]]; then
		echo ${COLOR_H}

	elif [[ ${VALUE} -lt 70 ]]; then
		echo ${COLOR_M}
	
	else
		echo ${COLOR_G}

	fi
fi
