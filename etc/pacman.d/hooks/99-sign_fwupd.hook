[Trigger]
Operation = Install
Operation = Upgrade
Type = Path
Target = usr/lib/fwupd/efi/fwupdx64.efi

[Action]
Description = Signing fwupdx64 with Machine Owner Key for Secure Boot
When = PostTransaction
Exec = /usr/bin/sbsign --key /root/efi-keys/MOK.key --cert /root/efi-keys/MOK.crt /usr/lib/fwupd/efi/fwupdx64.efi
Depends = sbsigntools
